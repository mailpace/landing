---
import { SITE } from 'astrowind:config';

import Image from '~/components/common/Image.astro';

const mailpaceLogoImg = '~/assets/images/mailpace-logo.png';
---

<Image src={mailpaceLogoImg} alt="MailPace Logo" width={24} />

<span
  class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white"
>
  {SITE?.name}
</span>
