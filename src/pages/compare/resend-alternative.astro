---
import Layout from '~/layouts/MailPaceVersus.astro';
import Features from '~/components/widgets/compare/Features.astro';
import Headline from '~/components/widgets/compare/Headline.astro';
import TestimonialList from '~/components/common/TestimonialList.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Pricing from '~/components/widgets/compare/Pricing.astro';

const metadata = {
  title: 'MailPace - Fast Transactional Email',
};
---

<Layout metadata={metadata}>

  <Headline
    provider="Resend"
    subtitle="Resend are a VC-backed company, that send using AWS SES." />

  <!-- Feature table comparison -->
   <Features competitorName="Resend" competitorFeatures={[
     { name: 'HTTPS API', supported: true },
     { name: 'SMTP Endpoint', supported: true },
     { name: 'Inbound Email', supported: false },
     { name: 'Unlimited Webhooks', supported: false, comment: "10 endpoints" },
     { name: 'Bounce List Management', supported: true },
     { name: '30 days of history', supported: false, comment: "3 days"},
     { name: 'Unlimited Team Members', supported: false, comment: "5 users" },
     { name: 'Unlimited Domains', supported: false, comment: "10 domains" },
     { name: 'DKIM', supported: true },
     { name: 'SPF', supported: true },
     { name: 'DMARC', supported: true },
     { name: '2FA', supported: true },
     { name: 'Time to Inbox Monitoring', supported: false },
     { name: 'Status Page', supported: true },
     { name: 'Integrations', supported: true },
     { name: 'Idempotent Email API', supported: false },
     { name: 'Transactional Only', supported: false },
     { name: 'Own Email Infrastructure', supported: false },
     { name: 'Human Support', supported: true },
     { name: 'Independent', supported: false },
     { name: 'European Sending', supported: true },
  ]} />

  <Pricing 
    competitorName="Resend"
    tenPrice={20.00}
    hundredPrice={90.00}
    millionPrice={650.00}
    justification="Resend are charging a large markup to send emails over AWS SES. As a VC funded startup, we wouldn't expect their pricing to remain competitive in the long term."
  />

  <!-- Time to Inbox/Performance/Deliverability widget -->

  <!-- Support widget -->

  <TestimonialList />

  <CallToAction
    title="Ready to send?"
    actions={[
      {
        variant: 'primary',
        text: 'Start Sending',
        href: 'https://app.mailpace.com/users/sign_up',
        target: '_blank',
        icon: 'tabler:bolt',
      },
    ]}
  />

</Layout>

