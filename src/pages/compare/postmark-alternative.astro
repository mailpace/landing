---
import Layout from '~/layouts/MailPaceVersus.astro';
import Features from '~/components/widgets/compare/Features.astro';
import Headline from '~/components/widgets/compare/Headline.astro';
import TestimonialList from '~/components/common/TestimonialList.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Pricing from '~/components/widgets/compare/Pricing.astro';

const metadata = {
  title: 'MailPace - Fast Transactional Email',
};
---

<Layout metadata={metadata}>
  <Headline
    provider="Postmark"
    subtitle="Postmark used to be fantastic, but since being bought by an American VC-backed startup, it's more expensive, has price cliffs that can double your price overnight, and gates basic features behind expensive plans."
  />

  <!-- Feature table comparison -->
  <Features
    competitorName="Postmark"
    competitorFeatures={[
      { name: 'HTTPS API', supported: true },
      { name: 'SMTP Endpoint', supported: true },
      { name: 'Inbound Email', supported: true },
      { name: 'All Webhooks', supported: false, comment: 'Limited webhooks' },
      { name: 'Bounce List Management', supported: true },
      { name: '30 days of history', supported: true },
      { name: 'Tagging', supported: true },
      { name: 'Unlimited Team Members', supported: false, comment: '4 users' },
      { name: 'Unlimited Domains', supported: false, comment: '5 domains' },
      { name: 'DKIM', supported: true },
      { name: 'SPF', supported: true },
      { name: 'DMARC', supported: true },
      { name: '2FA', supported: true },
      { name: 'Time to Inbox Monitoring', supported: true },
      { name: 'Status Page', supported: true },
      { name: 'Integrations', supported: true },
      { name: 'Idempotent Email API', supported: false },
      { name: 'Transactional Only', supported: false },
      { name: 'Own Email Infrastructure', supported: true },
      { name: 'Independent', supported: false },
      { name: 'European Sending', supported: false },
    ]}
  />

  <Pricing
    competitorName="Postmark"
    tenPrice={60.5}
    hundredPrice={126.5}
    millionPrice={852.5}
    justification="Postmark has a Basic plan that starts at $15 USD, but to unlock basic features you'll need to upgrade to their Pro plan that starts at a very high $60.50 USD. Their prices don't scale with usage, and have tiers that jump you up when you hit certain thresholds."
  />

  <!-- Time to Inbox/Performance/Deliverability widget -->

  <!-- Support widget -->

  <TestimonialList />

  <CallToAction
    title="Ready to send?"
    actions={[
      {
        variant: 'primary',
        text: 'Start Sending',
        href: 'https://app.mailpace.com/users/sign_up',
        target: '_blank',
        icon: 'tabler:bolt',
      },
    ]}
  />
</Layout>
